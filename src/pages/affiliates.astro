---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pageTitle = "Affiliate Program - InfinityMetrics";
const pageDescription =
  "Get paid when you sleep with affiliate commissions. Join InfinityMetrics affiliate program and earn 50% commissions for every customer you refer.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main>
    <section class="py-20 bg-black text-white">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Get paid when you sleep with affiliate commissions
          </h1>
          <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">
            Join InfinityMetrics affiliate program and earn 50% commissions for
            every customer you refer.
          </p>

          <div class="bg-gray-800 rounded-lg p-8 max-w-md mx-auto">
            <ul class="space-y-4 mb-8">
              <li class="flex items-center">
                <svg
                  class="w-6 h-6 text-white mr-3 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-white">50% of all payments for 1 year</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-6 h-6 text-white mr-3 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-white">Includes one-time purchases</span>
              </li>
              <li class="flex items-center">
                <svg
                  class="w-6 h-6 text-white mr-3 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-white">30-day cookie duration</span>
              </li>
            </ul>

            <a
              href="https://karloscodes.gumroad.com/affiliates"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-block px-8 py-4 bg-white text-black rounded-md hover:bg-gray-100 transition-colors font-bold text-lg w-full"
            >
              Become an affiliate
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
