---
const { class: className } = Astro.props;
---

<section class={`py-20 bg-black text-white ${className}`}>
  <div class="container">
    <div class="text-center max-w-3xl mx-auto slide-in">
      <span class="inline-block px-3 py-1 bg-white bg-opacity-10 rounded-full text-sm font-medium mb-4">
        Limited Time Offer
      </span>
      <h2 class="text-3xl md:text-4xl font-semibold mb-6 text-white">
        Be the First to Own It
      </h2>
      <p class="mb-8 text-gray-300 text-base max-w-2xl mx-auto font-medium">
        Join the Beta Program for early access and help shape the future.
      </p>
      <a
        href="#pricing"
        class="inline-block bg-white text-black hover:bg-gray-100 py-3 px-6 text-sm font-medium rounded-md"
      >
        Join the Beta Program
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 inline-block" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
      
      <div class="mt-12 grid grid-cols-3 gap-6 text-center max-w-lg mx-auto">
        <div class="flex flex-col items-center">
          <div class="text-xl font-semibold">Simple</div>
          <div class="text-gray-400 text-sm font-medium">One-click install</div>
        </div>
        <div class="flex flex-col items-center">
          <div class="text-xl font-semibold">Secure</div>
          <div class="text-gray-400 text-sm font-medium">Self-hosted</div>
        </div>
        <div class="flex flex-col items-center">
          <div class="text-xl font-semibold">Smart</div>
          <div class="text-gray-400 text-sm font-medium">AI-powered</div>
        </div>
      </div>
    </div>
  </div>
</section>
