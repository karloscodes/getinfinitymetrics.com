              >
                <img
                  src="/ask-ai-preview.png"
                  alt="Infinity Metrics AI Assistant Analytics Interface"
                  class="w-full h-full object-contain"
                />
              </div>
            </div>
            <div class="flex justify-center gap-2 py-2">
              <span
                class="dot w-2 h-2 bg-gray-400 rounded-full cursor-pointer hover:bg-gray-600"
                onclick="currentSlide(1)"></span>
              <span
                class="dot w-2 h-2 bg-gray-400 rounded-full cursor-pointer hover:bg-gray-600"
                onclick="currentSlide(2)"></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  let slideIndex = 1;
  showSlides(slideIndex);

  function plusSlides(n) {
    showSlides((slideIndex += n));
  }

  function currentSlide(n) {
    showSlides((slideIndex = n));
  }

  function showSlides(n) {
    let i;
    let slides = document.getElementsByClassName("slide");
    let dots = document.getElementsByClassName("dot");
    if (n > slides.length) {
      slideIndex = 1;
    }
    if (n < 1) {
      slideIndex = slides.length;
    }
    for (i = 0; i < slides.length; i++) {
      slides[i].style.opacity = "0";
    }
    for (i = 0; i < dots.length; i++) {
      dots[i].classList.remove("bg-gray-600");
    }
    slides[slideIndex - 1].style.opacity = "1";
    dots[slideIndex - 1].classList.add("bg-gray-600");
  }

  // Auto-advance slideshow
  setInterval(() => plusSlides(1), 5000);
</script>
