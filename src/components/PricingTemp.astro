---
const { class: className } = Astro.props;
---

<section id="pricing" class={`py-20 bg-white ${className}`}>
  <div class="container">
    <div class="text-center mb-12">
      <span
        class="inline-block px-3 py-1 bg-black bg-opacity-5 rounded-full text-sm font-medium mb-4"
      >
        Pricing
      </span>
      <h2 class="text-3xl md:text-4xl font-black mb-6 text-black">
        Limited Time Offer
      </h2>
    </div>

    <div class="max-w-lg mx-auto slide-in">
      <div class="bg-white border border-black rounded-lg p-6 shadow-md">
