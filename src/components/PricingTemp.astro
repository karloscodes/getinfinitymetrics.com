---
const { class: className } = Astro.props;
---

<section id="pricing" class={`py-20 bg-white ${className}`}>
  <div class="container">
    <div class="text-center mb-12">
      <span
        class="inline-block px-3 py-1 bg-black bg-opacity-5 rounded-full text-sm font-medium mb-4"
      >
        Special Beta Offer
      </span>
    </div>

    <div class="max-w-lg mx-auto slide-in">
      <div class="bg-white border border-black rounded-lg p-6 shadow-md">
        <div class="text-center">
          <h3 class="text-2xl font-black mb-4">Buy Beta License</h3>
          <div class="mb-6">
            <div class="flex items-center justify-center gap-3 mb-2">
              <span class="text-4xl font-black line-through text-gray-400"
                >$199.99</span
              >
              <span class="text-4xl font-black text-black">$49.99</span>
            </div>
            <p class="text-sm text-gray-600">(plus applicable taxes)</p>
          </div>
          <div class="flex items-center justify-center gap-2 mb-6">
            <div
              class="inline-block px-4 py-1 bg-gray-100 text-gray-800 rounded-full text-sm font-medium"
            >
              One-time payment
            </div>
            <div
              class="inline-block px-4 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium"
            >
              Save 75%
            </div>
          </div>

          <div class="flex flex-col items-center mb-8">
            {/* TODO: Update this Gumroad link to the $49.99 product */}
            <a
              data-infinity-event-name="click:cta_get_it_now_pricing"
              href="https://karloscodes.gumroad.com/l/infinity-metrics/INITIALPRICE?wanted=true"
              class="btn-primary w-full max-w-xs py-3 text-base"
            >
              Buy License Now
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 inline-block"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
            <p class="mt-3 text-sm">
              <a
                data-infinity-event-name="click:cta_free_trial_pricing"
                href="https://karloscodes.gumroad.com/l/infinity-metrics-30-days-free-trial?wanted=true&price=0"
                class="text-gray-600 hover:text-gray-900 underline"
                >Try it free for 30 days â†’</a
              >
            </p>
          </div>
        </div>

        <div class="h-px bg-gray-200 my-6"></div>

        <ul class="space-y-4 mt-8">
          <li class="flex items-start">
            <svg
              class="h-5 w-5 text-black flex-shrink-0 mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-base"
              ><strong>Free updates</strong> to any 1.x version</span
            >
          </li>
          <li class="flex items-start">
            <svg
              class="h-5 w-5 text-black flex-shrink-0 mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-base font-medium"
              >Track up to <strong>50 websites</strong> with one license</span
            >
          </li>
          <li class="flex items-start">
            <svg
              class="h-5 w-5 text-black flex-shrink-0 mr-3"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-base font-medium"
              >Get <strong>early access</strong> to all new features</span
            >
          </li>
        </ul>

        <div class="h-px bg-gray-200 my-6"></div>

        <p class="text-gray-600 text-center mt-8 text-sm">
          <a
            href="/terms#payments"
            class="text-gray-700 hover:text-black transition-colors duration-150 underline"
            >30-day money back guarantee</a
          >
        </p>
      </div>
    </div>
  </div>
</section>
